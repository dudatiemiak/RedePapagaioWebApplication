@model IEnumerable<RedePapagaioWebApplication.Models.Ocorrencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelUrgencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regiao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoOcorrencia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusOcorrencia.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelUrgencia.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regiao.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoOcorrencia.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
